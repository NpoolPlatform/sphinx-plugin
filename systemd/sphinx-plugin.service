[Unit]
Description=Sphinx Plugin
After=network.target

[Service]
User=sp
Group=sp
Type=simple
PIDFile=/run/sphinx-plugin.pid
ExecStart=/usr/local/bin/sphinx-plugin
ExecStop=/bin/kill -s QUIT $MAINPID
Restart=always
RestartSec=30
TimeoutSec=infinity
PrivateTmp=true

[Install]
WantedBy=multi-user.target
